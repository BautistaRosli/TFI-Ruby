<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Carrito de Venta</h1>
    <div>
      <%= link_to "Seguir Agregando", admin_disks_path, class: "btn btn-secondary me-2" %>
      <%= link_to "Cancelar", admin_sales_path, class: "btn btn-outline-danger" %>
    </div>
  </div>

  <% if @cart_items.any? %>
    <div class="card">
      <div class="card-body">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Disco</th>
              <th class="text-center">Cantidad</th>
              <th class="text-end">Precio Unit.</th>
              <th class="text-end">Subtotal</th>
              <th class="text-center">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @cart_items.each_with_index do |item, index| %>
              <tr>
                <td><strong><%= item['name'] %></strong></td>
                <td class="text-center"><%= item['units_sold'] %></td>
                <td class="text-end">$<%= number_with_precision(item['price'], precision: 2) %></td>
                <td class="text-end"><strong>$<%= number_with_precision(item['subtotal'], precision: 2) %></strong></td>
                <td class="text-center">
                  <%= button_to "Eliminar", 
                      remove_item_admin_sales_path(index: index), 
                      method: :delete, 
                      class: "btn btn-sm btn-danger",
                      data: { confirm: "¿Eliminar este item?" } %>
                </td>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr class="table-active">
              <td colspan="3" class="text-end"><strong>TOTAL:</strong></td>
              <td class="text-end"><h4 class="mb-0">$<%= number_with_precision(@total, precision: 2) %></h4></td>
              <td></td>
            </tr>
          </tfoot>
        </table>

        <div class="d-flex justify-content-between mt-4">
          <%= button_to "Vaciar Carrito", 
              clear_cart_admin_sales_path, 
              method: :delete, 
              class: "btn btn-outline-secondary",
              data: { confirm: "¿Vaciar todo el carrito?" } %>
          
          <%= button_to "Confirmar Venta", 
              admin_sales_path, 
              method: :post, 
              class: "btn btn-success btn-lg" %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="alert alert-info">
      <h4>El carrito está vacío</h4>
      <p class="mb-0">
        <%= link_to "Agregar discos a la venta", admin_disks_path, class: "btn btn-primary" %>
      </p>
    </div>
  <% end %>
</div>
