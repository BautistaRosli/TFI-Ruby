<% content_for :title, "Discos - Disquería" %>
<% content_for :page_title, "Administración de Discos" %>
<% content_for :stylesheets do %>
  <%= stylesheet_link_tag 'disks', media: 'all' %>
<% end %>

<%# --- Sección: seleccionar discos para la venta (muestra sólo con stock) --- %>
<% if @sales_disks.present? && @sales_disks.any? %>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Seleccionar Discos para la Venta</h1>
      <div>
        <%= link_to cart_admin_sales_path, class: "btn btn-primary me-2" do %>
          <i class="bi bi-cart3"></i> 
          Ver Carrito
          <% if session[:cart] && session[:cart]['items'] %>
            (<%= session[:cart]['items'].size %>)
          <% end %>    
        <% end %>
        <%= link_to "Volver a Ventas", admin_sales_path, class: "btn btn-secondary" %>
      </div>
    </div>

    <div class="row">
      <% @sales_disks.each do |disk| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= disk.name %></h5>
              <p class="card-text">
                <strong>Precio:</strong> $<%= number_with_precision(disk.unit_price.to_f, precision: 2) %><br>
                <strong>Stock:</strong> <%= disk.stock.to_i %> unidades<br>
                <strong>Formato:</strong> <span class="badge bg-info"><%= disk.format.presence || '—' %></span>
              </p>

              <%= form_with url: add_item_admin_sales_path, method: :post, class: "mt-3", local: true do |f| %>
                <%= f.hidden_field :disk_id, value: disk.id %>
                <div class="input-group">
                  <%= f.number_field :units_sold,
                      value: 1,
                      min: 1,
                      max: [disk.stock.to_i, 1].max,
                      class: "form-control",
                      placeholder: "Cantidad" %>
                  <%= f.submit "Agregar", class: "btn btn-success" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="d-flex justify-content-center mt-4">
      <%= paginate @sales_disks, param_name: :sales_page %>
    </div>
  </div>
<% end %>

<%# --- Sección: administración de discos (grid) --- %>
<div class="container">
  <div class="disks-hero">
    <div>
      <h1>Administración de Discos</h1>
      <p class="muted">Gestiona el catálogo — nuevo y usado</p>
    </div>
  </div>

  <div class="disks-grid">
    <% if @disks && @disks.any? %>
      <% @disks.each do |disk| %>
        <div class="disk-card">
          <%= button_to admin_disk_path(disk),
                method: :delete,
                class: "btn-delete-corner",
                form: { data: { confirm: "¿Dar de baja este disco?" } } do %>
            <!-- icono basura -->
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
              <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
              <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
            </svg>
          <% end %>

          <%= link_to admin_disk_path(disk), class: "card-link" do %>
            <div class="disk-media">
              <% if disk.respond_to?(:cover) && disk.cover.attached? %>
                <% if disk.cover.variable? %>
                  <%= image_tag url_for(disk.cover.variant(resize_to_limit: [180,180])), alt: disk.name %>
                <% else %>
                  <%= image_tag url_for(disk.cover), alt: disk.name %>
                <% end %>
              <% else %>
                <%= image_tag "/tony/tony#{rand(1..5)}.png", alt: "Imagen provisional", class: "fallback-img" %>
              <% end %>
            </div>

            <div class="disk-body">
              <h3 class="disk-title"><%= disk.name %></h3>
              <div class="disk-meta"><%= disk.author.presence || '—' %></div>
              <% if disk.category.present? %>
                <div class="tags"><span class="tag"><%= disk.category %></span></div>
              <% end %>
            </div>

            <div class="disk-footer">
              <div class="price">$<%= number_with_precision(disk.unit_price.to_f || 0, precision: 2) %></div>
              <div class="actions">
                <%= link_to 'Ver detalles', admin_disk_path(disk), class: 'btn-primary' %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <div class="no-disks-message">
        <h4>No hay discos en el catálogo</h4>
        <p>Puedes agregar discos nuevos o usados desde los botones abajo.</p>
      </div>
    <% end %>
  </div>

  <div class="pagination-wrap">
    <%= paginate @disks %>
  </div>

  <div class="create-disk-buttons" style="margin-top:16px;">
    <%= button_to 'Nuevo disco', new_admin_disk_path, method: :get, class: 'btn btn-primary' %>
  </div>
</div>