
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for(:title) || "Admin - Disquer√≠a" %></title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= stylesheet_link_tag 'graphics_index', media: 'all' %>
</head>
<body>
    <header class="admin-header w-100">
        <div class="header-content">
            <div class="header-top">
                <div>
                    <h1 class="header-title"><%= content_for(:page_title) || "Panel Administrativo" %></h1>
                    <p class="header-subtitle">Disquer√≠a - Sistema de Gesti√≥n</p>
                </div>
                <div class="header-buttons">
                    <%= link_to "Volver a men√∫ de gesti√≥n de ventas", admin_sales_path, class: "btn btn-logout" %>
                    
                    <%= button_to "Salir", destroy_user_session_path, method: :get, class: "btn btn-logout" %>
                </div>
            </div>
        </div>
    </header>

    <!-- Flash Messages -->
    <div class="flash-messages">
        <% if flash.any? %>
            <div class="flash-notifications">
                <% flash.each do |type, message| %>
                    <% 
                    alert_class = case type.to_s
                    when 'notice' then 'alert-success'
                    when 'alert' then 'alert-danger'
                    when 'warning' then 'alert-warning'
                    when 'info' then 'alert-info'
                    else 'alert-primary'
                    end
                    %>
                    <div class="alert <%= alert_class %> alert-dismissible fade show" role="alert">
                        <span class="alert-message"><%= message %></span>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% end %>
            </div>
        <% end %>
    </div>
    <main class="admin-main">
      <div class="card">
        <h3>Ventas por disco</h3>
        <% series = [
            {name: "Discos", data: @sales_by_disks}
          ] %>
        <% options = {
          ytitle: "Cantidad Vendido",
          stacked: true,
          defer: true 
        } %>

        <%= column_chart(series, {**options, theme: 'palette4'}) %>
      </div>

      <div class="card">
        <h3>Ingresos por Semana</h3>
        <%= column_chart @revenue_by_week, {
          title: "Dinero recaudado",
          ytitle: "Total ($)",
          prefix: "$", 
          stacked: false, # No necesitas stacked si es una sola serie
          defer: true
        } %>
      </div>



      <div class="card">
        <h3>üèÜ Empleados con m√°s Ventas (Cantidad)</h3>
        
        <%= bar_chart @employee_with_more_sales, {
          xtitle: "Cantidad de Ventas",
          ytitle: "Empleado (ID - Nombre Apellido)",
          height: "400px",
          colors: ["#3B82F6"], # Un azul queda bien para diferenciarlo del de dinero
          defer: true          # Para que cargue bien en Rails 8
        } %>
      </div>

      <div class="card">
        <h3> Tipos de discos vendidos</h3>
        <%= pie_chart([
          {name: "Ventas de CDs", data: @sales_from_cd},
          {name: "Ventas de vinilos", data: @sales_from_vinilo}
        ], legend: "left") %>
      </div>

      <div class="card full-width">
        <h3>Valor Promedio de Venta (AOV) por D√≠a</h3>
        <%= line_chart @aov_by_day, {
          title: "Tendencia del Gasto Promedio",
          ytitle: "Monto Promedio ($)",
          prefix: "$",
          defer: true
        } %>
      </div>

      <div class="card">
        <h3>Unidades Vendidas por Categor√≠a (G√©nero)</h3>
        <%= column_chart @category_sold, {
          ytitle: "Unidades Vendidas",
          colors: ["#60A5FA"],
          defer: true
        } %>
      </div>

    </main>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
